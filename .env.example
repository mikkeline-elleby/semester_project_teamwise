
# Required
TAVUS_API_KEY=replace_me

# Optional
WEBHOOK_URL=
TAVUS_REPLICA_ID=r4317e64d25a

#for now I don't set one as this is only for local testing -- maybe we will need one later 
WEBHOOK_SHARED_SECRET=

# Endpoints (override only if needed)
PERSONA_ENDPOINT=https://tavusapi.com/v2/personas
CONVERSATION_ENDPOINT=https://tavusapi.com/v2/conversations
REPLICAS_ENDPOINT=https://tavusapi.com/v2/replicas

# Webhook S3 upload (optional): if set, webhook auto-uploads delivered recording URLs to S3
# NOTE: This is independent from native Tavus recording; it's a fallback via our webhook.
AWS_REGION=eu-north-1
S3_BUCKET=tavus-recording
S3_PREFIX=recordings/

# Native Tavus S3 recording (env-driven alternative to properties file)
# If set, you can run: python tune.py conversation --use-s3-recording-from-env
S3_RECORDING_ASSUME_ROLE_ARN=
S3_RECORDING_BUCKET_REGION=
S3_RECORDING_BUCKET_NAME=

# CLI behavior defaults (optional)
# When unset, you can still pass flags; these provide zero-flag convenience.
# TUNE_AUTO_RECORDING: if true, auto inject native S3 recording properties using S3_RECORDING_* env vars when config enable_recording=true or no properties supplied.
# TUNE_VERBOSE: if set (any non-empty), CLI prints assembled payloads automatically.
TUNE_AUTO_RECORDING=true
TUNE_VERBOSE=1
