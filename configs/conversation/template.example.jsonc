// Conversation template (JSON with comments). Copy to a .json file when ready to run.
// Provide either persona_id (preferred) or replica_id. If both are blank, the CLI auto-picks a completed replica.
{
    // Identity: choose ONE (persona preferred)
    "persona_id": "",
    "replica_id": "",
    // Name shown in Tavus dashboard and APIs
    "conversation_name": "My Conversation",
    // Either set an explicit context here (recommended)...
    "conversational_context": "Set the scene here: who is the user, what is the objective, and any constraints.",
    // ...or use the meeting helper flags in the CLI to auto-build context:
    //    bin/tune.sh conversation \
    //      --meeting-type Brainstorming --framework "Double Diamond" \
    //      --duration 6 --participants 3 \
    //      --topic "What is the single biggest travel challenge?" \
    //      --comment "we need support for goal alignment"
    // Optional greeting said when the user joins
    "custom_greeting": "",
    // Optional toggles and advanced fields
    "audio_only": false,
    "document_ids": [], // real document IDs from your account
    "document_tags": [], // real document tags used by your documents
    "document_retrieval_strategy": "balanced", // speed | quality | balanced
    "memory_stores": [],
    "test_mode": false, // set true only when validating configuration
    // Optional: direct webhook URL for callbacks (omit this field if you don't actually have a URL).
    // TIP: the CLI also reads WEBHOOK_URL from .env as a fallback.
    "callback_url": "",
    // Recording options (choose one of the following approaches):
    // 1) Shortcut: set enable_recording = true to auto-inject default role/region/bucket used by this harness.
    "recording_enable": true,
    // 2) Full control via properties (if you prefer explicit configuration or your defaults differ):
    // "properties": {
    //   "enable_recording": true,
    //   "aws_assume_role_arn": "arn:aws:iam::<your-account-id>:role/<role-name>",
    //   "recording_s3_bucket_region": "eu-north-1",
    //   "recording_s3_bucket_name": "your-bucket"
    // },
    // If neither enable_recording nor properties are set, no native S3 recording will be used.
    // Freeform object for other advanced/operational settings (and optional recording/details):
    // Common optional keys:
    //   max_call_duration (seconds)          : hard cap on call length
    //   participant_left_timeout (seconds)   : end call after last participant leaves
    //   participant_absent_timeout (seconds) : end if participant never joins
    //   language                             : e.g. 'english', 'multilingual'
    //   enable_closed_captions (bool)        : request captions
    //   apply_greenscreen (bool)             : apply background effect
    "properties": {
        "enable_recording": false,
        "max_call_duration": 1800,
        "participant_left_timeout": 60,
        "participant_absent_timeout": 120,
        "language": "multilingual",
        "enable_closed_captions": false,
        "apply_greenscreen": false
    }
}